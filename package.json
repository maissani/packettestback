{
  "name": "backend",
  "version": "1.0.0",
  "description": "A backend service for the Tic Tac Toe exercice.",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "test": "jest --coverage --config jest.config.js",
    "watch": "jest --watch --coverage --config jest.config.js",
    "build": "tsc --outdir dist/ && cp -rp node_modules dist/node_modules",
    "prod": "node ./dist/src/index.js",
    "deploy": "exit 1"
  },
  "author": "Mehdi AISSANI",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/mongodb": "^3.3.4",
    "@types/mongoose": "^5.5.18",
    "cors": "^2.8.5",
    "cucumber": "^5.1.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "jest-cucumber": "^2.0.11",
    "mongoose": "^5.7.3",
    "node-fetch": "^2.6.0",
    "ts-jest": "^24.1.0",
    "ts-node-dev": "^1.0.0-pre.43",
    "winston": "^3.2.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "jest": "^24.9.0",
    "jest-cucumber": "^2.0.11",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  }
}
